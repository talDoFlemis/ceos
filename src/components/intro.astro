---
import ContentSection from "./content-section.astro";
import AdvantageCard from "./advantage-card.astro";

const features = [
  {
    title: "Preço em conta",
    description: "Crie suas aplicações com um preço que cabe no seu bolso",
    icon: "mdi:currency-usd",
  },
  {
    title: "Confiabilidade",
    description: "Aplicações robustas que não lhe deixarão na mão",
    icon: "bi:shield-lock",
  },
  {
    title: "Atendimento Personalizado",
    description:
      "Atendimento altamente personalizado para garantir sua aplicação dos sonhos",
    icon: "mdi:handshake",
  },
];
---

<ContentSection title="Vantagens de ser CEOS" id="whyceos">
  <ul class="grid grid-cols-1 gap-8 sm:grid-cols-3">
    {
      features.map((feat) => (
        <AdvantageCard
          title={feat.title}
          description={feat.description}
          icon={feat.icon}
        />
      ))
    }
  </ul>
</ContentSection>
