---
import Icon from "astro-icon";

interface Props {
  title: string;
  icon: string;
  description: string;
}

const { title, icon, description } = Astro.props;
---

<li class="relative group">
  <div
    class="absolute -inset-0.5 bg-gradient-to-r from-green-500 to-blue-500 opacity-70 transition-all group-hover:from-pink-500 group-hover:to-yellow-500 group-hover:opacity-100 blur"
    aria-hidden="true"
  >
  </div>
  <div
    class="flex relative flex-col gap-4 items-center p-4 w-full h-full rounded-2xl bg-offset"
  >
    <div class="p-3 w-16 h-16 rounded-full border-2 border-current">
      <Icon name={icon} />
    </div>
    <p class="text-xl font-extrabold text-center">{title}</p>
    <p class="text-sm text-center text-offset">{description}</p>
  </div>
</li>
