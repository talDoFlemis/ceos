---
import Icon from "astro-icon";

interface Props {
  title: string;
  icon: string;
  description: string;
}

const { title, icon, description } = Astro.props;
---

<li class="relative group">
  <div
    class="absolute -inset-0.5 bg-gradient-to-r opacity-70 from-green-500 to-blue-500 blur group-hover:from-pink-500 group-hover:to-yellow-500 group-hover:opacity-100 transition-all"
    aria-hidden="true"
  >
  </div>
  <div
    class="flex flex-col items-center gap-4 rounded-2xl bg-offset relative p-4 h-full w-full"
  >
    <div class="w-16 h-16 p-3 border-2 border-current rounded-full">
      <Icon name={icon} />
    </div>
    <p class="text-xl font-extrabold text-center">{title}</p>
    <p class="text-sm text-center text-offset">{description}</p>
  </div>
</li>
